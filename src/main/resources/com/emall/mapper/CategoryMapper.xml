<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.emall.mapper.CategoryMapper">

    <select id="getCategoryById" resultType="com.emall.entity.Category" parameterType="int">
        select *
        from pms_category
        where id = #{id}
          and deleted != 1;
    </select>

    <select id="list" resultType="category">
        select * from pms_category;
    </select>

    <insert id="add" parameterType="category">
        insert into pms_category(name,parent_id) values (#{name},#{parentId})
    </insert>
    <update id="update"  parameterType="category">
          update pms_category set name= #{name},parent_Id=#{parentId} where id =#{id}
    </update>



</mapper>
