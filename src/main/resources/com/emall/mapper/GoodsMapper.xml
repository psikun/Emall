<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.emall.mapper.GoodsMapper">
    <select id="getGoodsById" resultType="com.emall.entity.Goods" parameterType="int">
        select *
        from pms_goods
        where id = #{id}
          and deleted != 1;
    </select>

    <select id="list" resultType="goods">
        select * from pms_goods;
    </select>

    <insert id="add" parameterType="goods">
        insert into pms_goods(name,first_id,second_id,price,discount,information) values (#{name},#{firstId},#{secondId},#{price},#{discount},#{information})
    </insert>
    <update id="update"  parameterType="goods">
        update pms_goods set name= #{name},first_Id=#{firstId},second_id=#{secondId},price=#{price},discount=#{discount},information=#{information} where id =#{id}
    </update>
</mapper>